{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "The Fireplace",
  "identifier": "com.openclaw.fireplace",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/16x16.png",
      "icons/32x32.png",
      "icons/32x32@2x.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "Mission Control for OpenClaw",
    "longDescription": "A native macOS + iOS app that fully replaces OpenClaw's built-in Control UI and TUI",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "iOS": {
      "minimumSystemVersion": "13.0"
    }
  },
  "app": {
    "trayIcon": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "The Fireplace",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "Transparent"
      }
    ],
    "macOSPrivateApi": false,
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "endpoints": [
        "https://github.com/patrickhere/the-fireplace/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  }
}
